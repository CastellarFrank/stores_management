<p><%= link_to raw('<span class="icon-th icon-white"></span> New Group'), new_store_group_path(store), :class=>'btn' %></p>

<div class="head purple">
    <div class="icon"><span class="ico-location"></span></div>
    <h2>Table</h2>
    <ul class="buttons">
        <li><a href="#" onClick="source('table_hover'); return false;"><div class="icon"><span class="ico-info"></span></div></a></li>
    </ul>
</div>
<div class="data-fluid">
    <%= render partial: 'shared/flash_partial'%>

    <% if store.groups.any?%>
        <table cellpadding="0" cellspacing="0" width="100%" class="table table-hover">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Location</th>
                <th>Type</th>
            </tr>

            <% store.groups.each do |group| %>
                <tr>
                    <td><%= group.id %></td>
                    <td><%= link_to group.name, store_group_path(store, group) %></td>
                    <td><%= group.location %></td>
                    <td><%= group.type %></td>
                </tr>
            <% end %>
        </table>
    <% else %>
        <i>There isn't any group associated with this Store.</i>
    <% end %>
</div>



