<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>Stores List<small>System</small></h1>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <%= link_to raw('<span class="icon-th icon-white"></span> New Store'), new_store_path, :class=>'btn' %>

            <div class="head purple">
                <div class="icon"><span class="ico-location"></span></div>
                <h2>Table</h2>
                <ul class="buttons">
                    <li><a href="#" onClick="source('table_hover'); return false;"><div class="icon"><span class="ico-info"></span></div></a></li>
                </ul>
            </div>
            <div class="data-fluid">
                <%= render partial: 'shared/flash_partial'%>

                <% if @stores.any? %>
                    <table cellpadding="0" cellspacing="0" width="100%" class="table table-hover">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Manager</th>
                            <th>Telephone</th>
                            <th>Actions</th>
                        </tr>
                        <%= render @stores %>
                    </table>
                <% else %>
                    <br>
                    <i>There are no stores available.</i>
                <% end %>

            </div>
        </div>
    </div>
</div>

