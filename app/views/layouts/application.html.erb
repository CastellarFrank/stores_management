<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="icon" type="image/ico" href="favicon.ico"/>

    <title>StoreManagement</title>

    <script type='text/javascript' src='/assets/plugins/jquery/jquery-1.11.1.min.js'></script>
    <script type='text/javascript' src='/assets/plugins/jquery/jquery-ui-1.10.1.custom.min.js'></script>
    <script type='text/javascript' src='/assets/plugins/jquery/jquery-migrate-1.2.1.min.js'></script>
</head>
<body>
<div class="wrapper">

    <div class="sidebar" style="min-height: 700px;">

        <div class="top">
            <a class="logo"><h1>System<br><small>Stores System</small></h1></a>
        </div>
        <div class="nContainer">
            <ul class="navigation">

                <li class="active">
                    <%= link_to 'HOME', home_index_path, :class=>'blblue'%>
                </li>
                <li>
                    <%= link_to 'STORES', stores_path, :class=>'blyellow'%>
                </li>
                <li>
                    <%= link_to 'PRODUCTS', products_path, :class=>'blgreen'%>
                </li>
                <li>
                    <%= link_to 'CONTACT', new_contact_path, :class=>'bldblue'%>
                </li>
                <% if current_user %>
                    <li><%= link_to 'LOGOUT', logout_path, :class => 'blred' %></li>
                <% else %>
                    <li><%= link_to 'LOGIN', login_path, :class => 'blorange' %></li>
                    <li><%= link_to 'SIGN UP', join_path, :class => 'blpurple'%></li>
                <% end %>
            </ul>
            <a class="close">
                <span class="ico-remove"></span>
            </a>
        </div>
        <div class="widget">
            <div class="datepicker"></div>
        </div>

    </div>

    <div class="body">
        <ul class="navigation">
            <li>
                <%= link_to raw('
                    <div class="icon">
                        <span class="ico-monitor">
                        </span>
                    </div>
                    <div class="name">HOME</div>'), home_index_path, :class=>'button'%>
            </li>
            <li>
                <%= link_to raw('
                    <div class="icon">
                        <span class="ico-stack-2"></span>
                    </div>
                    <div class="name">STORES</div>'), stores_path, :class=>'button yellow'%>
            </li>
            <li>
                <%= link_to raw('
                    <div class="icon">
                        <span class="ico-align-center"></span>
                    </div>
                    <div class="name">PRODUCTS</div>'), products_path, :class=>'button green'%>
            </li>
            <li>
                <%= link_to raw('
                    <div class="icon">
                        <span class="ico-envelope-alt"></span>
                    </div>
                    <div class="name">CONTACT</div>'), new_contact_path, :class=>'button dblue'%>
            </li>


            <% if current_user %>
                <li>
                    <%= link_to raw('
                    <div class="icon">
                        <span class="ico-user"></span>
                    </div>
                    <div class="name">LOGOUT</div>'), logout_path, :class=>'button red'%>
                </li>
            <% else %>
                <li>
                    <%= link_to raw('
                    <div class="icon">
                        <span class="ico-user"></span>
                    </div>
                    <div class="name">LOGIN</div>'), login_path, :class=>'button orange'%>
                </li>

                <li>
                    <%= link_to raw('
                    <div class="icon">
                        <span class="ico-pencil-2"></span>
                    </div>
                    <div class="name">SIGN UP</div>'), join_path, :class=>'button purple'%>
                </li>
            <% end %>

            <li>
                <div class="buttons">
                    <div class="sbutton green navButton">
                        <a href="#"><span class="ico-align-justify"></span></a>
                    </div>
                    <div class="sbutton blue">
                        <a href="#"><span class="ico-cogs"></span></a>
                        <div class="popup">
                            <div class="arrow"></div>
                            <div class="row-fluid">
                                <div class="row-form">
                                    <div class="span12"><strong>SETTINGS</strong></div>
                                </div>
                                <div class="row-form">
                                    <div class="span4">Navigation:</div>
                                    <div class="span8"><input type="radio" class="cNav" name="cNavButton" value="default"/> Default <input type="radio" class="cNav" name="cNavButton" value="bordered"/> Bordered</div>
                                </div>
                                <div class="row-form">
                                    <div class="span4">Content:</div>
                                    <div class="span8"><input type="radio" class="cCont" name="cContent" value=""/> Responsive <input type="radio" class="cCont" name="cContent" value="fixed"/> Fixed</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>


        </ul>
        <div class="content">
            <%= yield %>
        </div>
    </div>


</div>

