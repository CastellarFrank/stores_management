<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>Send Message<small>System</small></h1>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <%= form_for(@contact) do |f| %>
                <%= render partial: 'shared/error_partial', locals: { object: @contact } %>

                <div class="row-form">
                    <div class="span3"><%= f.label :title %></div>
                    <div class="span9"><%= f.text_field :title %></div>
                </div>

                <div class="row-form">
                    <div class="span3"><%= f.label :message %></div>
                    <div class="span9"><%= f.text_area :message %></div>
                </div>

                <div class="row-form">
                    <div class="span3"><%= 'Select Store: ' %></div>
                    <div class="span9"><%= f.collection_select :store_id, Store.all,:id,:name, include_blank: false %></div>
                </div>

                <div class="row-form">
                    <%= f.submit(:class=> 'btn') %>
                </div>

            <% end %>
        </div>
    </div>
</div>