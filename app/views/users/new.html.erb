<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>Sign Up<small>Create your own account</small></h1>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <%= form_for(@user) do |f| %>
                <%= render partial: 'shared/error_partial', locals: { object: @user } %>

                <div class="row-form">
                    <div class="span3"><%= f.label :email %></div>
                    <div class="span9"><%= f.email_field :email %></div>
                </div>

                <div class="row-form">
                    <div class="span3"><%= f.label :full_name %></div>
                    <div class="span9"><%= f.text_field :full_name %></div>
                </div>

                <div class="row-form">
                    <div class="span3"><%= f.label :password %></div>
                    <div class="span9"><%= f.password_field :password %></div>
                </div>

                <div class="row-form">
                    <div class="span3"><%= f.label :password_confirmation %></div>
                    <div class="span9"><%= f.password_field :password_confirmation %></div>
                </div>

                <div class="row-form">
                    <%= f.submit(:class=> 'btn') %>
                </div>
            <% end %>
        </div>
    </div>
</div>
