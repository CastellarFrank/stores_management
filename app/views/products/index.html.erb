<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>Listing Products<small>System</small></h1>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <%= render partial: 'shared/flash_partial'%>
            <%= link_to raw('<span class="icon-th icon-white"></span> New Product'), new_product_path, :class=>'btn' %>

            <div class="head purple">
                <div class="icon"><span class="ico-location"></span></div>
                <h2>Table</h2>
                <ul class="buttons">
                    <li><a href="#" onClick="source('table_hover'); return false;"><div class="icon"><span class="ico-info"></span></div></a></li>
                </ul>
            </div>

            <div class="data-fluid">
                <%= render partial: 'shared/flash_partial'%>

                <% if @products.any? %>
                    <table cellpadding="0" cellspacing="0" width="100%" class="table table-hover">
                        <thead>
                        <tr>
                            <th>GROUP</th>
                            <th>NAME</th>
                            <th>DESCRIPTION</th>
                            <th>UNIT PRICE</th>
                            <th>WHOLESALE</th>
                            <th>SIZE</th>
                            <th>ACTIONS</th>
                        </tr>
                        </thead>

                        <tbody>
                        <%= render partial:'product', collection: @products %>
                        </tbody>
                    </table>
                <% else %>
                    <i>There isn't any product added to the system yet.</i>
                <% end %>
            </div>
        </div>
    </div>
</div>
