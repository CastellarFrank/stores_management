<div class="page-header">
    <div class="icon">
        <span class="ico-arrow-right"></span>
    </div>
    <h1>LOGIN<small>Use your account information</small></h1>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <%= render partial: 'shared/flash_partial'%>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <%= form_tag enter_path do %>

                <div class="row-form">
                    <div class="span3"><%= label_tag :email %></div>
                    <div class="span9"><%= email_field_tag :email, cookies.signed[:user_email]  %></div>
                </div>

                <div class="row-form">
                    <div class="span3"><%= label_tag :password %></div>
                    <div class="span9"><%= password_field_tag :password %></div>
                </div>


                <div class="row-form">
                    <%= submit_tag 'Login', :class => 'btn' %>
                </div>
            <% end %>
        </div>
    </div>
</div>


